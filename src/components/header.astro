---
import { Image } from "astro:assets";
import { Github } from "lucide-react";

import profile from "@/images/profile.png";
---

<header class="container flex flex-row items-center justify-between py-2">
  <a href="/" class="flex flex-row items-center gap-3 font-semibold">
    <Image src={profile} alt="profile" class="size-7 rounded-md" />
    <span class="sr-only sm:not-sr-only">Aakash Kc</span>
  </a>
  <nav class="flex flex-row items-center gap-3 font-medium">
    <a href="/portfolio" class="p-2">Portfolio</a>
    <a href="/blog" class="p-2">Blog</a>
    <a href="https://github.com/aakashkcx" class="p-2">
      <Github className="size-5" />
    </a>
  </nav>
</header>
