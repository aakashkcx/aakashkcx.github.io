---
import { getCollection } from "astro:content";

import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import LayoutBlog from "@/layouts/layout-blog.astro";

const newestPosts = (await getCollection("posts"))
  .filter((post) => post.data.published)
  .toSorted((a, b) => b.data.created.valueOf() - a.data.created.valueOf())
  .slice(0, 3);
---

<LayoutBlog>
  <header class="space-y-5 text-center font-semibold sm:text-left">
    <h1 class="text-4xl tracking-tight">Hi there, I'm Aakash! ðŸ‘‹</h1>
    <h2 class="text-3xl tracking-tight">Welcome to my blog!</h2>
  </header>
  <section class="flex flex-col gap-10">
    <h3 class="text-2xl font-semibold tracking-tight">Latest Posts</h3>
    <div class="flex flex-col gap-10">
      {
        newestPosts.map((post) => (
          <a href={`/blog/post/${post.id}`} class="group flex flex-col gap-3">
            <h4
              class="text-xl font-semibold tracking-tight"
              transition:name={`post-${post.id}-title`}
            >
              {post.data.title}
            </h4>
            <p class="text-muted-foreground group-hover:text-foreground line-clamp-3 transition-colors">
              {post.data.description}
            </p>
            <p class="text-muted-foreground group-hover:text-foreground text-sm transition-colors">
              {post.data.created.toLocaleDateString()}
            </p>
            <div class="flex gap-3">
              {post.data.tags.map((tag) => (
                <Badge className="bg-muted-foreground group-hover:bg-primary">
                  {tag}
                </Badge>
              ))}
            </div>
          </a>
        ))
      }
    </div>
    <Button asLink href="/blog/posts" variant="secondary">View all posts</Button
    >
  </section>
</LayoutBlog>
