---
import { getCollection } from "astro:content";

import Badge from "@/components/ui/badge.astro";
import LayoutBlog from "@/layouts/layout-blog.astro";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  const tags = Array.from(new Set(posts.flatMap((post) => post.data.tags)));

  return tags.map((tag) => ({
    params: { id: tag },
    props: { tag, posts: posts.filter((post) => post.data.tags.includes(tag)) },
  }));
}

const { tag, posts } = Astro.props;

const title = `Tag: ${tag}`;
---

<LayoutBlog title={title}>
  <header class="flex flex-row items-center gap-3 font-semibold">
    <h1 class="text-4xl tracking-tight">Tag:</h1>
    <Badge size="lg" class="px-4 text-3xl">{tag}</Badge>
  </header>
  <section class="flex flex-col gap-10">
    {
      posts.map((post) => (
        <a href={`/blog/post/${post.id}`} class="group flex flex-col gap-3">
          <h4 class="text-xl font-semibold tracking-tight">
            {post.data.title}
          </h4>
          <p class="text-muted-foreground group-hover:text-foreground line-clamp-3 transition-colors">
            {post.data.description}
          </p>
          <p class="text-muted-foreground group-hover:text-foreground text-sm transition-colors">
            {post.data.created.toLocaleDateString()}
          </p>
          <div class="flex gap-3">
            {post.data.tags.map((tag) => (
              <Badge class="bg-muted-foreground group-hover:bg-primary">
                {tag}
              </Badge>
            ))}
          </div>
        </a>
      ))
    }
  </section>
</LayoutBlog>
