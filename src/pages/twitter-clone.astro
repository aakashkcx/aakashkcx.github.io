---
import Layout from "@/layouts/layout.astro";

const targetUrl = "https://twitter-clone-aakashkcx.vercel.app/";
const targetText = "twitter-clone-aakashkcx.vercel.app";
---

<Layout
  title="Twitter Clone"
  description="The page you're looking for doesn't exist."
>
  <meta http-equiv="refresh" content={`0; url=${targetUrl}`} />

  <main class="flex grow items-center">
    <section class="container flex flex-col gap-3 text-center">
      <h1 class="text-4xl font-semibold tracking-tight">twitter-clone</h1>
      <p>
        Redirecting to <a
          href={targetUrl}
          class="font-medium underline underline-offset-4">{targetText}</a
        >
      </p>
    </section>
  </main>
</Layout>
