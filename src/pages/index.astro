---
import { Image } from "astro:assets";
import { FileText, Github, Linkedin } from "lucide-react";

import { Button } from "@/components/ui/button";
import Layout from "@/layouts/layout.astro";

import headshot from "@/assets/images/headshot.jpg";
---

<Layout>
  <main class="flex grow items-center justify-center">
    <section
      class="container flex flex-col-reverse items-center justify-between gap-5 lg:flex-row"
    >
      <div class="flex flex-col gap-5 text-center lg:text-left">
        <h1 class="text-6xl font-semibold tracking-tight sm:text-8xl">
          Aakash Kc
        </h1>
        <p class="text-lg font-medium">
          Hi there! Welcome to my personal website!
        </p>
        <div
          class="flex flex-row flex-wrap justify-center gap-5 lg:justify-start"
        >
          <Button asLink href="https://github.com/aakashkcx">
            <Github />Github
          </Button>
          <Button asLink href="https://www.linkedin.com/in/aakashkc/">
            <Linkedin />LinkedIn
          </Button>
          <Button asLink href="/resume">
            <FileText />Resume
          </Button>
        </div>
      </div>
      <Image
        src={headshot}
        alt="Headshot of Aakash Kc"
        class="aspect-square size-100 h-auto max-w-full rounded-full"
      />
    </section>
  </main>
</Layout>
